<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="0dp"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/image_with_title_card">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.parse.ParseImageView android:id="@+id/image_with_title_view"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <TextView android:id="@+id/image_with_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSelectTitle"
            android:elevation="2dp"
            android:textStyle="bold"
            android:padding="@dimen/select_title_margin"
            android:gravity="center_vertical"
            android:text="Event 제목"
            android:textColor="@color/colorWhite"/>
    </android.support.v7.widget.CardView>

</LinearLayout>