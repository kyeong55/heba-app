<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/option_cover_image_height">
    <com.parse.ParseImageView
        android:id="@+id/option_cover_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cover_image_default"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cover_photo_background"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/profile_image_width"
            android:layout_height="@dimen/profile_image_width"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/profile_image_padding"
            android:layout_marginBottom="@dimen/profile_image_padding"
            card_view:cardCornerRadius="@dimen/profile_image_radius">
            <com.parse.ParseImageView
                android:id="@+id/option_profile_image"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@mipmap/ic_user"
                android:scaleType="centerCrop"
                android:padding="@dimen/profile_image_border"/>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <TextView
                android:id="@+id/option_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장영재"
                android:textSize="@dimen/user_name_size"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/user_name_padding"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="@dimen/user_info_padding_bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="@dimen/user_name_padding"
                    android:text="@string/number_of_stamp"/>
                <TextView
                    android:id="@+id/option_stamp_count"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#FFFFFF"
                    android:text="0"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
